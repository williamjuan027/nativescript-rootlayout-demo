<GridLayout rows="auto" verticalAlignment="bottom" height="455" class="bg-accent-secondary" borderRadius="25 25 0 0">
	<StackLayout padding="30">
		<Label color="#000" fontWeight="bold" fontSize="18" marginBottom="15" text="What do you want to see stacked next?" textWrap="true"></Label>
		<StackLayout tap="openMiniBottomsheet" class="button">
			<Label text="Show me another bottomsheet"></Label>
		</StackLayout>
		<StackLayout tap="openCustomModal" class="button">
			<Label text="How about a modal?"></Label>
		</StackLayout>
		<StackLayout tap="close" class="button">
			<Label text="Nah, just close this"></Label>
		</StackLayout>
	</StackLayout>
</GridLayout>
